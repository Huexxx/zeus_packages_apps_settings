<?xml version="1.0" encoding="UTF-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_title" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="status_bar_brightness_control"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:title="@string/status_bar_toggle_brightness" />

    <ListPreference
        android:entries="@array/entries_status_bar_battery"
        android:entryValues="@array/values_status_bar_battery"
        android:key="status_bar_battery"
        android:persistent="false"
        android:title="@string/status_bar_battery" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="status_bar_battery_percentage"
        android:summary="@string/status_bar_battery_percentage_summary"
        android:title="@string/status_bar_battery_percentage" />

    <ListPreference
        android:entries="@array/quick_pulldown_entries"
        android:entryValues="@array/quick_pulldown_values"
        android:key="quick_pulldown"
        android:persistent="false"
        android:title="@string/quick_pulldown" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="status_bar_double_tap_to_sleep"
        android:summary="@string/status_bar_double_tap_to_sleep_summary"
        android:title="@string/status_bar_double_tap_to_sleep" />

</PreferenceScreen>
