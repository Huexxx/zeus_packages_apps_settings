<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/huexxx_interface_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="navigation_bar"
        android:title="@string/navigation_bar_title">

        <PreferenceScreen
            android:fragment="com.android.settings.huexxx.NavBar"
            android:key="navigation_bar_custom"
            android:title="@string/navigation_bar_custom" />
    
        <ListPreference
            android:key="navigation_bar_height"
            android:dialogTitle="@string/navigation_bar_height"
            android:title="@string/navigation_bar_height"
            android:entries="@array/navigation_bar_height_entries"
            android:entryValues="@array/navigation_bar_height_values"
            android:defaultValue="48"
            android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="status_bar_cat"
        android:title="@string/status_bar_title">

        <PreferenceScreen
            android:key="status_bar"
            android:fragment="com.android.settings.huexxx.StatusBarSettings"
            android:title="@string/status_bar_title" />

    </PreferenceCategory>

</PreferenceScreen>
